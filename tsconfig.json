{
  "compilerOptions": {
    "strict": true,
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "module": "umd",
    "outDir": "dist",
    "rootDir": "src/browser",
    "target": "es6",
    "esModuleInterop": false,
    "noImplicitAny": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src/browser"]
}
