{
  "name": "shcalendar",
  "version": "1.0.0",
  "description": "The Calendar Related Extensions - SH (Solar Hijri, Shamsi Hijri, Iranian Hijri)",
  "keywords": [
    "calendar",
    "date",
    "time"
  ],
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon --exec \"npm run build\"",
    "clean": "rm -rf dist src/browser",
    "test:clean": "rm -rf dist/tests",
    "build": "npm run clean && gulp combineTS && tsc -p tsconfig.json && gulp",
    "test:build": "npm run test:clean &&  tsc -p tsconfig.test.json",
    "test": "node dist/src/SHCalendar.js > test/out.out",
    "prepare": "husky install"
  },
  "homepage": "https://github.com/md-akhi/SHCalendar-js#readme",
  "main": "./dist/cjs/base.js",
  "module": "./dist/mjs/base.js",
  "types": "./dist/types/base.d.ts",
  "browser": "./dist/browser/shcalendar.min.js",
  "npmjs": "https://www.npmjs.com/package/shcalendar",
  "unpkg": "https://unpkg.com/shcalendar@latest/dist/shcalendar.min.js",
  "jsdrive": "https://cdn.jsdelivr.net/npm/shcalendar@latest/dist/shcalendar.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/md-akhi/SHCalendar-js.git"
  },
  "bugs": {
    "url": "https://github.com/md-akhi/SHCalendar-js/issues"
  },
  "author": "Mohammad Amanalikhani <md.akhi.ir@gmail.com>",
  "license": "AGPL-3.0",
  "exports": {
    ".": {
      "browser": "./dist/browser/shcalendar.min.js",
      "require": "./dist/cjs/base.js",
      "import": "./dist/mjs/base.js",
      "types": "./dist/types/base.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "dist/types/base.d.ts"
      ],
      "./*": [
        "./dist/types/languages/i18n/*.d.js"
      ]
    }
  },
  "directories": {
    "dist": "./dist",
    "src": "./src",
    "tests": "./tests",
    "man": "./docs",
    "docs": "./docs"
  },
  "files": [
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    "docs",
    "dist"
  ],
  "man": [
    "./docs/**/*.md"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.19",
    "@tsconfig/recommended": "^1.0.2",
    "@types/gulp": "^4.0.13",
    "@types/gulp-babel": "^6.1.30",
    "@types/gulp-header": "^2.0.2",
    "@types/gulp-rename": "^2.0.2",
    "@types/gulp-uglify": "^3.0.8",
    "@babel/preset-env": "^7.16.11",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "eslint": "^8.14.0",
    "eslint-config-recommended": "^4.1.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^8.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-header": "^2.0.9",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^2.12.2",
    "gulp-uglify": "^3.0.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "shdate": "^2.1.22"
  }
}
